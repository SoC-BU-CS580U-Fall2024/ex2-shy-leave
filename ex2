#include <stdio.h>
#include <math.h>

void displayMenu();
float calculateTriangleArea();
float calculateCircleArea();
float calculateRectangleArea();
float calculateSquareArea();
float calculateTrapezoidArea();

int main() {
    int choice;
    float area;
    
    printf("Please use area computation!\n\n");
    
    do {
        displayMenu();
        printf("Please enter your choice (1-6): ");
        scanf("%d", &choice);
        
        switch(choice) {
            case 1:
                area = calculateTriangleArea();
                printf("Area of the triangle: %.2f\n\n", area);
                break;
            case 2:
                area = calculateCircleArea();
                printf("Area of the circle: %.2f\n\n", area);
                break;
            case 3:
                area = calculateRectangleArea();
                printf("Area of the rectangle: %.2f\n\n", area);
                break;
            case 4:
                area = calculateSquareArea();
                printf("Area of the square: %.2f\n\n", area);
                break;
            case 5:
                area = calculateTrapezoidArea();
                printf("Area of the trapezoid: %.2f\n\n", area);
                break;
         
             
            default:
                printf("Invalid choice, please try again!\n\n");
        }
    } while(choice != 6);
    
    return 0;
}

void displayMenu() {
    printf("Please select a geometric shape to calculate area:\n");
    printf("1. Triangle\n");
    printf("2. Circle\n");
    printf("3. Rectangle\n");
    printf("4. Square\n");
    printf("5. Trapezoid\n");
}

float calculateTriangleArea() {
    float base, height;
    printf("Enter the base of the triangle: ");
    scanf("%f", &base);
    printf("Enter the height of the triangle: ");
    scanf("%f", &height);
    return 0.5 * base * height;
}

float calculateCircleArea() {
    float radius;
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);
    return M_PI * radius * radius;
}

float calculateRectangleArea() {
    float length, width;
    printf("Enter the length of the rectangle: ");
    scanf("%f", &length);
    printf("Enter the width of the rectangle: ");
    scanf("%f", &width);
    return length * width;
}

float calculateSquareArea() {
    float side;
    printf("Enter the side length of the square: ");
    scanf("%f", &side);
    return side * side;
}

float calculateTrapezoidArea() {
    float base1, base2, height;
    printf("Enter the first base of the trapezoid: ");
    scanf("%f", &base1);
    printf("Enter the second base of the trapezoid: ");
    scanf("%f", &base2);
    printf("Enter the height of the trapezoid: ");
    scanf("%f", &height);
    return 0.5 * (base1 + base2) * height;
}


