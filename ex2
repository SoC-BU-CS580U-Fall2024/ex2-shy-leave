#include <stdio.h>

int main() {
    int num, originalNum, reversedNum = 0, remainder;
    
       printf("Enter an integer: ");
    scanf("%d", &num);
    
    originalNum = num;     
    while (num != 0) {
    remainder = num % 10; // Get the last digit
reversedNum = reversedNum * 10 + remainder; 
    num /= 10; 
    }
    
    if (originalNum == reversedNum) {
        printf("%d is a palindrome number.\n", originalNum);
    } else {
        printf("%d is not a palindrome number.\n", originalNum);
    }
    
    return 0;
}


3.
#include <stdio.h>

int main() {
    int count = 0;
    double number, sum = 0.0;
    char choice;
    
    printf("Average Calculator Program\n");
    printf("==========================\n");
    
    do {
        
        printf("Enter a number: ");
        scanf("%lf", &number);
        
       
        sum += number;
        count++;
        
        
        printf("Do you want to enter another number? (y/n): ");
        scanf(" %c", &choice); 
        
    } while (choice == 'y' || choice == 'Y');
    
    
    if (count > 0) {
        double average = sum / count;
        printf("\nYou entered %d numbers.\n", count);
        printf("The sum is: %.2f\n", sum);
        printf("The average is: %.2f\n", average);
    } else {
        printf("\nNo numbers were entered.\n");
    }
    
    return 0;
}

4.
#include <stdio.h>

int isPerfect(int num) {
    int sum = 0;
    
    
    for (int i = 1; i <= num / 2; i++) {
        if (num % i == 0) {
            sum += i;
        }
    }
    
       return (sum == num);
}

void printPerfectNumbers(int start, int end) {
    printf("Perfect numbers between %d and %d are: ", start, end);
    
    int found = 0;
    for (int i = start; i <= end; i++) {
        if (isPerfect(i)) {
            printf("%d ", i);
            found = 1;
        }
    }
    
    if (!found) {
        printf("No perfect numbers found in the given range.");
    }
    printf("\n");
}

int main() {
    int start, end;
    
    printf("Perfect Number Finder\n");
    printf("=====================\n");
    
   
    printf("Enter the starting number: ");
    scanf("%d", &start);
    
    printf("Enter the ending number: ");
    scanf("%d", &end);
    
   
    if (start < 1) {
        printf("Note: Starting number adjusted to 1 (perfect numbers are positive integers).\n");
        start = 1;
    }
    
    if (end < start) {
        printf("Error: Ending number should be greater than or equal to starting number.\n");
        return 1;
    }
    
    
    printPerfectNumbers(start, end);
    
    return 0;
}
